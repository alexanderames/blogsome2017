<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
			<h2><%= @blog_post.title %></h3>
			<p class="text-right">
				<span class="posted-at">posted on: <%=@blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %></span>
			</p>
	</div>		
	<div class="panel-body">
	by <strong><%= @blog_post.user.username %></strong><br> 
	<p><%= @blog_post.blog_entry %></p>
	</div>
</div>

<div class="panel panel-success">
	<div class="panel-heading">
		Make a Comment
	</div>
	<div class="panel-body">
		<%= render 'comments/form' %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-header">
		<h4>Comments</h4>
	</div>
	<% @blog_post.comments.each do |comment| %>
	<div class="panel panel-success">
		<div class="panel-body">
			<p><strong><%= comment.user.username %></strong> said: </p>
			<p><%= comment.comment_entry %></p>
		</div>
	</div>
	<% end %>
</div>

<div>
	<%= link_to 'Back', blog_posts_path %>
	<%= link_to 'Edit', edit_blog_post_path(@blog_post) %>
</div>